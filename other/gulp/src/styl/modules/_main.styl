// MODULE: Раздел MAIN

@import 'nib'

@require '_vars.styl'
@require '_mixins.styl'

.main
    padding-top b(15)
    overflow hidden
    fs(1)
    transition: $trans

    @media --q.lg-
        margin 0 auto
        dimen(b(200), auto)

        &:not(.scroll)
            padding-top 30vh
            min-height calc(100vh - 70px)

        &.scroll
            padding-top b(15)
            min-height calc(100vh - 70px)

    &.oneui-style
        border-radius 0 0 $br $br